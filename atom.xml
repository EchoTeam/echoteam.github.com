---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>Echo в России</title>
 <link href="http://echorussia.ru/atom.xml" rel="self"/>
 <link href="http://echorussia.ru/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://echorussia.ru/</id>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <author>
     <name>{{ post.author }}</name>
     <uri>{{ post.author_url }}</uri>
   </author>
   <link href="http://echorussia.ru{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://echorussia.ru{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
